{
  "compilerOptions": {
    "strict": true,
    "module": "CommonJS",
    "moduleResolution": "node",
    "lib": ["ES2022"],
    "target": "ES2022",
    "outDir": "../dist",
    "esModuleInterop": true,
    "typeRoots": ["./src/types", "node_modules/@types"],
  },
  "exclude": ["node_modules"],
  "include": ["src/**/*"],
  "ts-node": {
    "files": true,
    "require": ["tsconfig-paths/register"],
  },
}
