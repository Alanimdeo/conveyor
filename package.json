{
  "name": "conveyor",
  "version": "0.8.2",
  "author": "Alanimdeo <alan@imdeo.kr>",
  "private": true,
  "license": "MIT",
  "scripts": {
    "backend": "yarn workspace @conveyor/backend",
    "frontend": "yarn workspace @conveyor/frontend",
    "types": "yarn workspace @conveyor/types",
    "dev": "yarn workspaces run dev",
    "prebuild": "rm -rf dist && yarn types build",
    "build": "yarn workspaces run build",
    "postbuild": "node scripts/postBuild.js",
    "update-deps": "yarn workspaces run update-deps",
    "precommit": "node scripts/preCommit.js && git add ./**/package.json"
  },
  "workspaces": [
    "types",
    "backend",
    "frontend"
  ]
}